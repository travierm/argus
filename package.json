{
	"name": "ghostwire",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bun -b vite dev",
		"serve": "bun run src/main.ts",
		"build": "vite build",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:migrate": "bun run src/lib/db/scripts/migrate.ts",
		"db:seed": "bun run src/lib/db/scripts/seed.ts",
		"db:reset": "bun run src/lib/db/scripts/reset.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/bun": "^1.3.4",
		"@types/node": "^22.19.2",
		"@vitest/browser": "^3.2.4",
		"bun-types": "^1.3.4",
		"daisyui": "^5.5.11",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vite": "^7.2.7",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"@lucide/svelte": "^0.553.0",
		"@tanstack/svelte-virtual": "^3.13.13",
		"elysia": "^1.4.18",
		"fuzzysort": "^3.1.0",
		"highlight.js": "^11.11.1",
		"shiki": "^3.19.0"
	}
}
