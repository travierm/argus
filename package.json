{
	"name": "ghostwire",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "rm -f storage/logs/*.log && bun -b vite dev 2>&1 | tee storage/logs/dev.log",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:migrate": "bun run src/lib/server/migrations/migrator.ts",
		"db:make:migration": "bun run src/lib/server/migrations/generator.ts",
		"db:fresh": "bun run src/lib/server/migrations/fresh.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^22.19.3",
		"@vitest/browser": "^3.2.4",
		"bun-types": "^1.3.5",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"@lucide/svelte": "^0.553.0",
		"@tanstack/svelte-virtual": "^3.13.13",
		"fuzzysort": "^3.1.0",
		"shiki": "^3.20.0"
	}
}
